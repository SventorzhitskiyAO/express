{
  "env": {
    "node": true,
    "es2021": true
  },
  "extends": [
    "eslint:recommended"
  ],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "plugins": [
    "@typescript-eslint"
  ],
  "rules": {
    "indent": [
      "error",
      2
    ],
    "linebreak-style": [{
      "env": {
        "node": true,
        "es2021": true
      },
      "extends": [
        "eslint:recommended"
      ],
      "parser": "@typescript-eslint/parser",
      "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
      },
      "plugins": [
        "@typescript-eslint"
      ],
      "rules": {
        "indent": ["error", 2],
        "linebreak-style": ["error", "unix"],
        "quotes": ["error", "single"],
        "semi": ["error", "always"],
        "max-len": ["error", 140],
        "max-lines-per-function": ["error", 20],
        "no-consecutive-blank-lines": 0,
        "no-console": "error",
        "no-empty": "off",
        "no-var-requires": "off",
        "object-literal-sort-keys": "off",
        "no-duplicate-imports": "error",
        "trailing-comma": "off"

      },
      "settings": {
        "import/resolver": {
          "node": {
            "extensions": [".js", ".ts"]
          }
        }
      }
    },
      "error",
      "unix"
    ],
    "quotes": [
      "error",
      "single"
    ],
    "semi": [
      "error",
      "always"
    ],
    "max-len": [
      "error",
      140
    ],
    "max-lines-per-function": [
      "error",
      20
    ],
    "no-consecutive-blank-lines": 0,
    "no-console": "warn",
    "no-empty": "off",
    "no-var-requires": "off",
    "object-literal-sort-keys": "off",
    "no-duplicate-imports": "error",
    "trailing-comma": "off"
  },
  "settings": {
    "import/resolver": {
      "node": {
        "extensions": [
          ".js",
          ".ts"
        ]
      }
    }
  }
}
